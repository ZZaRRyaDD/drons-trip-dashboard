upstream server {
    server server:${APP_PORT};
}

upstream front {
    server frontend:80;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    location /favicon.ico {
        access_log     off;
        log_not_found  off;
    }

    location /api {
        proxy_pass http://server/api/;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    location / {
        proxy_pass http://front/;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    location /swagger {
        proxy_pass http://server/swagger;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
    
    location /openapi.json {
        proxy_pass http://server/openapi.json;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
}
